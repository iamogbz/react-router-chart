{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "declaration": true,
        "jsx": "react",
        "moduleResolution": "Node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "./lib",
        "target": "es6"
    },
    "exclude": [
        "lib",
        "node_modules"
    ]
}
